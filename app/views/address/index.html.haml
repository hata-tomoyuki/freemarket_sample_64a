.wrapper
  = render partial: 'layouts/header'

  .main
    .main__center

      -# 1段目（購入内容の確認）
      .main__center__upper
        .main__center__upper--character
          発送元・お届け先住所入力
        
      -# 2段目以降
      .main__center__bottom
        .main__center__bottom__form
          = form_for '' do |f|

            -# カード番号部分
            .main__center__bottom__form__upper
              -# %label{for: "address"} お名前
              = f.label :name, "お名前"
              %span.form-require 
                必須
              .input-box
                = f.text_field :first_name, placeholder: "例) 山田", class: "input-text"
              -#   %input.input-text{placeholder: "例) 山田", type: "text"}
              .input-box
                = f.text_field :last_name, placeholder: "例) 彩", class: "input-text"
                -# %input.input-text{placeholder: "例) 彩", type: "text"}

            .main__center__bottom__form__lower
              -# %label{for: "address"} お名前カナ
              = f.label :name, "お名前カナ"
              %span.form-require 
                必須
              .input-box
                = f.text_field :first_name_reading, placeholder: "例) ヤマダ", class: "input-text"
                -# %input.input-text{placeholder: "例) ヤマダ", type: "text"}
              .input-box
                = f.text_field :last_name_reading, placeholder: "例) アヤ", class: "input-text"
                -# %input.input-text{placeholder: "例) アヤ", type: "text"}

            .main__center__bottom__form__lower
              -# %label{for: "address"} 郵便番号
              = f.label :postal_code, "郵便番号"
              %span.form-require 
                必須
              .input-box
                = f.text_field :postal_code, placeholder: "例) 123-4567", class: "input-text"
                -# %input.input-text{placeholder: "例) 123-4567", type: "text"}

            .main__center__bottom__form__lower
              -# %label{for: "address"} 都道府県
              = f.label :prefecture_id, "都道府県"
              %span.form-require 
                必須
            .select-box
              -# = form_for '' do |f|
              .select-box__form
                = f.collection_select :prefecture_id, Prefecture.all, :id, :name
                %i.fas.fa-chevron-down

            .main__center__bottom__form__lower
              -# %label{for: "address"} 市町村
              = f.label :city, "市町村"
              %span.form-require 
                必須
              .input-box
                = f.text_field :city, placeholder: "例) 札幌市中央区", class: "input-text"
                -# %input.input-text{placeholder: "例) 札幌市中央区", type: "text"}

            .main__center__bottom__form__lower
              -# %label{for: "address"} 番地
              = f.label :house_number, "番地"
              %span.form-require 
                必須
              .input-box
                = f.text_field :house_number, placeholder: "例) 旭ケ丘1-1-1", class: "input-text"
                -# %input.input-text{placeholder: "例) 旭ケ丘1-1-1", type: "text"}

            .main__center__bottom__form__lower
              -# %label{for: "address"} 建物名
              = f.label :building_name, "建物名"
              %span.form-arbitrary
                任意
              .input-box
                = f.text_field :house_number, placeholder: "例) 柳ビル103", class: "input-text"
                -# %input.input-text{placeholder: "例) 柳ビル103", type: "text"}

            .main__center__bottom__form__lower
              -# %label{for: "address"} 電話
              = f.label :phone_number, "電話"
              %span.form-arbitrary
                任意
              .input-box
                = f.text_field :phone_number, placeholder: "例) 090123456783", class: "input-text"
                -# %input.input-text{placeholder: "例) 09012345678", type: "text"}
            
              = submit_tag "登録する", id: 'submit_btn'
            -# .main__center__bottom__form__btn
              -# 登録する

            

  = render partial: 'layouts/footer'