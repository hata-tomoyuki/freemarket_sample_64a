.wrapper

  -# ヘッダー
  %header.pcHeader
  .headerInner
    .mainHeader
      %h1.icon
        = link_to image_tag("http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg")
      .searchBox
        %form{"accept-charset": "UTF-8", action: "#", method: "get"}
          %input{name: "utf8", type: "hidden", value: "#"}/
          %input#searchInput.searchBox--input{name: "key", placeholder: "キーワードから探す"}/
          %button{type:  "submit"}
            .searchBox__icon
              = link_to image_tag("http://furima.tokyo/assets/icon-search-60a83ada85216fe00789cd16065281694d9a08948275fef83683fadcf131d84d.svg")
      %ul.resultLists
    .nav
      %ul.listsLeft
        %li.listLeft__item.listsLeft__item--first
          #catBtn 
          = link_to 'カテゴリー'
          .tree.displayNone
            .tree.displayNone
              %ul.categoryTree
        %li.listLeft__item
          #brandBtn
          = link_to 'ブランド'
          %ul.brandsPulldown.displayNone
      %ul.listsRight
        %li.listsRight__item.listsRight__item--login
          = link_to 'ログイン' , '#'
        %li.listsRight__item.listsRight__item--new
          = link_to '新規会員登録' , '#'
  .nav_bottom
    .nav_bottom__category
      %span.title
        = link_to 'FURIMA' , '#'
      %i.fas.fa-chevron-right
      %span
        = link_to 'ベビー・キッズ' , '#'
      %i.fas.fa-chevron-right
      %span
        = link_to 'ベビー服(男女兼用) ~95cm' , '#'
      %i.fas.fa-chevron-right
      %span
        = link_to 'アウター' , '#'
      %i.fas.fa-chevron-right
      %span.now
        adidas アディダス スニーカー

  .main
    .main__products_center

      -# 1段目（商品情報など）
      .main__products_center__upper

        -## 商品名表示
        .main__products_center__upper--product_name
          adidas アディダス スニーカー

        -## 商品名情報表示 
        .main__products_center__upper__info_box

          -### 商品写真表示
          .main__products_center__upper__info_box__image
            -#### メイン画像
            .main__products_center__upper__info_box__image__img_main
              .main__products_center__upper__info_box__image__img_main--image
                = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png")


            -#### サブ画像（複数投稿時）
            .main__products_center__upper__info_box__image__img_sub

              -##### サブ画像表示1段目
                     2段に分けないとビューが崩れてしまうのでとりあえず2段に分けて表示しています。
              .main__products_center__upper__info_box__image__img_sub__first

                .main__products_center__upper__info_box__image__img_sub__first__outer
                  .main__products_center__upper__info_box__image__img_sub__first__outer--image
                    = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png")

                .main__products_center__upper__info_box__image__img_sub__first__outer{id: "hidden"}
                  .main__products_center__upper__info_box__image__img_sub__first__outer--image
                    = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png")
                .main__products_center__upper__info_box__image__img_sub__first__outer{id: "hidden"}
                  .main__products_center__upper__info_box__image__img_sub__first__outer--image
                    = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png")

                .main__products_center__upper__info_box__image__img_sub__first__outer{id: "hidden"}
                  .main__products_center__upper__info_box__image__img_sub__first__outer--image
                    = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png")

                .main__products_center__upper__info_box__image__img_sub__first__outer{id: "hidden"}
                  .main__products_center__upper__info_box__image__img_sub__first__outer--image
                    = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png")
              
              -##### サブ画像表示2段目
              .main__products_center__upper__info_box__image__img_sub__second

                .main__products_center__upper__info_box__image__img_sub__second__outer{id: "hidden"}
                  .main__products_center__upper__info_box__image__img_sub__second__outer--image
                    = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png")

                .main__products_center__upper__info_box__image__img_sub__second__outer{id: "hidden"}
                  .main__products_center__upper__info_box__image__img_sub__second__outer--image
                    = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png")

                .main__products_center__upper__info_box__image__img_sub__second__outer{id: "hidden"}
                  .main__products_center__upper__info_box__image__img_sub__second__outer--image
                    = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png")

                .main__products_center__upper__info_box__image__img_sub__second__outer{id: "hidden"}
                  .main__products_center__upper__info_box__image__img_sub__second__outer--image
                    = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png")

                .main__products_center__upper__info_box__image__img_sub__second__outer{id: "hidden"}
                  .main__products_center__upper__info_box__image__img_sub__second__outer--image
                    = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png")

          -### 値段表示
          .main__products_center__upper__info_box--price_info
            %span.price ¥4,999
            %span.tax (税込)
            %span.shipping_fee 送料込み

          -### 商品説明
          .main__products_center__upper__info_box--description
            色は、グレー、ブルー
            %br
            サイズは、27cm
            %br
            %br
            数回履きましたが、もう履かなそうなので履いてくれる方にお譲りします。
            ※creprotectの防水スプレーもかけてあります。
            %br
            %br
            中古品なので神経質の方は購入を避けた方がいいと思います。

          -### 商品情報表示テーブル 
          .main__products_center__upper__info_box__table
            %table.item-detail-table
              %tr
                %th 出品者
                %td
                  .owner_name
                    %a hata
              %tr
                %th カテゴリー
                %td
                  .category_1
                    メンズ
                  .category_2
                    %i.fas.fa-chevron-right 
                    靴
                  .category_3
                    %i.fas.fa-chevron-right 
                    スニーカー
              %tr
                %th ブランド
                %td
                  .bland_name
                    %a アディダス
              %tr
                %th 商品のサイズ
                %td
                  27.0 cm
              %tr
                %th 商品の状態
                %td
                  新品・未使用
              %tr
                %th 送料の負担
                %td
                  送料込み（出品者負担）
              %tr
                %th 配送本地域
                %td
                  千葉県
              %tr
                %th 発送日の目安
                %td
                  4-7日で発送
     
          -### いいねボタンなど
          .main__products_center__upper__info_box__small_btns
            .main__products_center__upper__info_box__small_btns__like
              %i.far.fa-star
              %span お気に入り
              5
            .main__products_center__upper__info_box__small_btns__accusation
              %i.far.fa-flag
              %span 不適切な商品の報告
              
          -### 購入画面に進むボタン
          .main__products_center__upper__info_box__btn
            購入画面に進む

      -# 2段目（コメントなど）
      .main__products_center__bottom
        .main__products_center__bottom__comment
          %textarea.comment_box{cols: "60", rows: "6"}
        .main__products_center__bottom__message
          相手のことを考え丁寧なコメントを心がけましょう。
          %br
          不快な言葉遣いなどは利用制限や退会処分となることがあります。
        .main__products_center__bottom__comment_btn
          %i.fas.fa-comment
          %span コメントする

      -# 他の商品ページへのリンクなど
      .main__products_center__paging
        .main__products_center__paging--bofore
          %i.fas.fa-chevron-left
          前の商品
        .main__products_center__paging--next
          次の商品
          %i.fas.fa-chevron-right 
      .main__products_center__categoried_product
        %a hataさんのその他の出品を見る
      .main__products_center__categoried_product
        %a メンズ/スニーカーのその他の出品を見る

  -# フッター
  .side.appBanner
    .inner
      %h2.inner__title だれでもかんたん、人生を変えるフリマアプリ
      %p.inner_text 今すぐ無料ダウンロード！
      .inner__icon
        .aBtn
          = link_to image_tag("http://furima.tokyo/assets/app-store-9c5e28e8f81bd9912e0ded2f78821e04778a1356c05dc7c7bf1e88614be37c34.svg")
        .gBtn
          = link_to image_tag("http://furima.tokyo/assets/google-play-469c63f1269e456307c4dde176b33cc3bbbbf142ac4d7369656010130149db1a.svg")
  .footer
    %ul.contents
      %li.content
        %h2.content__head FURIMAについて
        %ul
          %li
            = link_to '会社概要（運営会社）'
          %li
            = link_to 'プライバシーポリシー'
          %li
            = link_to 'FURIMA利用規約'
          %li
            = link_to 'ポイントに関する特約'
      %li.content
        %h2.content__head FURIMAを見る
        %ul
          %li
            = link_to 'カテゴリー一覧'
          %li
            = link_to 'ブランド一覧'
      %li.content
        %h2.content__head ヘルプ＆ガイド
        %ul
          %li
            = link_to 'FURIMAガイド'
          %li
            = link_to 'FURIMAロゴ利用ガイドライン'
          %li
            = link_to 'お知らせ'
    .footer__logo
      = link_to image_tag("http://furima.tokyo/assets/logo-white-f61961ed5170064c5f33dd4524bdceeb5a5df2c83eb76fba31143f63fbab2c5e.svg")
    %p © FURIMA
    .purchaseBtn
      %span.purchaseBtn__text 出品する
      = link_to image_tag("http://furima.tokyo/assets/icon_camera-968c5ebaa05319bf1e2ad7508f852dd712504a4d26a1930d8bd87ec03ebcc37a.svg")